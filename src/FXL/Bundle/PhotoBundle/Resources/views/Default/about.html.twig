{% extends 'FXLPhotoBundle::base.html.twig' %}
{% block title %}Photos de {{ userName }} - Azax{% endblock title %}
{% block content %}
    <h4 class="well">{{ meta.hook }}</h4>
    <div class="row">
        <div class="col-md-4">
            <img src="{{ ("/uploads/fxlphoto/michel-royo/meta/profil-tresse.jpg") | apply_filter('paste_home')  }}" style="width: 100%;"/>

            <h4>{{ meta.title1|raw }}</h4>
            <p>
                {{ meta.text1|raw }}
            </p>
        </div>
        <div class="col-md-4">
            <img src="{{ ("/uploads/fxlphoto/michel-royo/meta/amorgos.jpg") | apply_filter('paste_home')  }}" style="width: 100%;"/>

            <h4>{{ meta.title2|raw }}</h4>
            <p>
                {{ meta.text2|raw }}
            </p>

            <img src="/uploads/fxlphoto/michel-royo/meta/michel.jpg" style="display: block; margin: 0 auto; width: 80%;"/>
        </div>
        <div class="col-md-4">
            <img src="{{ ("/uploads/fxlphoto/michel-royo/meta/celina.jpg" | apply_filter('paste_home'))}}" style="width: 100%;"/>

            <h4>{{ meta.title3|raw }}</h4>
            <p>
                {{ meta.text3|raw }}
            </p>
        </div>
    </div>
    <style>
        .row h4 {
            min-height: 30px;
        }
    </style>
    <script>
        document.oncontextmenu = new Function("return false");
    </script>
{% endblock %}