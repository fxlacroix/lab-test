<h1>Asset creation</h1>

<form action="{{ path('admin_ajax_asset_create') }}" method="post" {{ form_enctype(form) }}>

    <div class="left_admin_form">

        {{form_row(form.name) }}
        {{form_row(form.url) }}
        {{form_row(form.type) }}
        {{form_row(form.file) }}
        </div>

        <div class="right_admin_form">
        {{form_row(form.description) }}
        </div>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>
{% include 'FXLMusicBundle:Component:js/form_ajax.html.twig' %}