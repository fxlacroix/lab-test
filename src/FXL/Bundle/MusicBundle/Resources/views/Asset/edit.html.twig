<h1>Asset edition</h1>

<form style="background: url({{edit_form.vars.data.path }}) right top no-repeat" action="{{ path('admin_ajax_asset_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

    <div class="left_admin_form">

        {{form_row(edit_form.name) }}
        {{form_row(edit_form.url) }}
        {{form_row(edit_form.type) }}
        {{form_row(edit_form.file) }}
        </div>

        <div class="right_admin_form">
        {{form_row(edit_form.description) }}
        </div>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>
{% include 'FXLMusicBundle:Component:js/form_ajax.html.twig' %}