
<script type="text/javascript">

    $('form').submit(function() {

        $("form").mask("Waiting...");

        //$("form").attr("style", "background: gray");

        var dataForm = $(this).serializefiles();

        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: dataForm,
            dataType: 'html',

            cache: false,
            contentType: false,
            processData: false,

            success: function(html) {

               $("#ajax_form").html(html);

               $("form").unmask("Waiting...");
                //make_tree();
                refresh_tree();
            }
        });
        return false;
    });

    $("[id*=description]").height($(".left_admin_form").last().height() - 40);

</script>

