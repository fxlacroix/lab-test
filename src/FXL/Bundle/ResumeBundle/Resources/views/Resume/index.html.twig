{% extends 'FXLResumeBundle::base.html.twig' %}

{% block title %}CV de {{ resume.identity.firstName }} {{ resume.identity.lastName }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1" role="main"></div>
            <div class="col-md-9" role="main">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <img src="data:image/svg+xml;base64,"
                             alt="" class="img-circle pull-right">
                        <h3> {{ resume.identity.lastName}} {{ resume.identity.firstName }}</h3>
                        <blockquote>
                            <p class="lead">{{ resume.name }}</p>
                        </blockquote>
                        <div class="well" style="margin-top: 40px;">{{ resume.description }}</div>
                        <h3>Compétences</h3>
                        <dl class="dl-horizontal">
                            {% for skill in resume.skills %}
                                <dt>{{ skill.name }}</dt>
                                <dd>{{ skill.level }}</dd>
                            {% endfor %}
                        </dl>
                        <h3>Expérience</h3>
                        {% for experience in resume.experiences %}
                            <dl class="dl-horizontal">
                                <dt>{{ experience.startAt|date('d / m / Y') }}</dt>
                                <dd></dd>
                            </dl>
                            <dl class="dl-horizontal">
                                <dt>{{ experience.company }}</dt>
                                <dd>{{ experience.title }}</dd>
                            </dl>
                        {% endfor %}
                        <h3>Loisir</h3>
                        <ul>
                            {% for leisure in resume.leisures %}
                                <li>
                                    {{ leisure.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}